<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <ImageView
        android:id="@+id/imgsong"
        android:layout_width="35dp"
        android:src="@drawable/qa"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/imgsong"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/imgAction"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="qabroquadoa"
            android:textColor="@color/black"
            android:textSize="15dp"
            />
        <TextView
            android:id="@+id/single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="qaasdasdsadasd"
            android:textColor="@color/black"
            android:textSize="13dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/imgAction"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/pause"
        android:layout_toStartOf="@+id/imgClear"
        android:layout_marginEnd="30dp"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/imgClear"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/clear"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />

</RelativeLayout>